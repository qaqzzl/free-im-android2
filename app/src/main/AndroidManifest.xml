<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.qaqzz.free_im">

    <application
        android:name=".base.BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">

        <!--OPPO-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.2" />

        <!--小米适配-->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <!--引导页-->
        <activity
            android:name=".activities.IndexActivity"
            android:theme="@style/AppThemeFull">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GuideActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeFull" />

        <!-- 主页-->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--登录-->
        <activity
            android:name=".activities.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--添加好友-->
<!--        <activity-->
<!--            android:name=".ui.AddFriendActivity"-->
<!--            android:label="@string/text_user_add_friend"-->
<!--            android:launchMode="singleTask" />-->

        <!--用户信息-->
        <activity
            android:name=".activities.UserInfoActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!--聊天-->
        <activity
            android:name=".activities.ChatActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>